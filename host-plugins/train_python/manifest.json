{
  "id": "ultralytics",
  "name": {
    "zh-CN": "Ultralytics YOLO",
    "en-US": "Ultralytics YOLO"
  },
  "version": "1.0.0",
  "type": ["training", "inference"],
  "description": {
    "zh-CN": "基于 Ultralytics 的目标检测、姿态估计、实例分割训练与推理插件",
    "en-US": "Training and inference plugin for object detection, pose estimation, and instance segmentation based on Ultralytics"
  },
  "author": "EasyMark Team",
  "entry": "main.py",
  "__entry": "train.exe",
  
  "inference": {
    "icon": null,
    "defaultIcon": "brain",
    "serviceEntry": "infer_service.py",
    "serviceType": "stdio",
    "supportedTasks": ["detect", "segment", "pose"],
    "ui": {
      "modelSelector": true,
      "confidenceSlider": {
        "default": 0.25,
        "min": 0.01,
        "max": 1.0,
        "step": 0.01
      },
      "iouSlider": {
        "default": 0.45,
        "min": 0.01,
        "max": 1.0,
        "step": 0.01
      },
      "autoInfer": {
        "default": true
      },
      "customParams": [
        {
          "key": "imageSize",
          "type": "number",
          "label": { "zh-CN": "输入尺寸", "en-US": "Image Size" },
          "default": 640,
          "min": 320,
          "max": 1280,
          "step": 32
        }
      ]
    }
  },
  
  "training": {
    "trainTypes": ["detection", "pose", "segmentation"],
    "dataFormat": "yolo",
    "framework": "ultralytics"
  },
  
  "models": [
    {
      "id": "yolov8",
      "name": "YOLOv8",
      "trainTypes": ["detection"],
      "variants": ["n", "s", "m", "l", "x"],
      "isStandard": true
    },
    {
      "id": "yolov8-pose",
      "name": "YOLOv8 Pose",
      "trainTypes": ["pose"],
      "variants": ["n", "s", "m", "l", "x"],
      "isStandard": true
    },
    {
      "id": "yolov8-seg",
      "name": "YOLOv8 Seg",
      "trainTypes": ["segmentation"],
      "variants": ["n", "s", "m", "l", "x"],
      "isStandard": true
    },
    {
      "id": "yolov11",
      "name": "YOLOv11",
      "trainTypes": ["detection"],
      "variants": ["n", "s", "m", "l", "x"],
      "isStandard": true
    },
    {
      "id": "yolov11-pose",
      "name": "YOLOv11 Pose",
      "trainTypes": ["pose"],
      "variants": ["n", "s", "m", "l", "x"],
      "isStandard": true
    },
    {
      "id": "yolov11-seg",
      "name": "YOLOv11 Seg",
      "trainTypes": ["segmentation"],
      "variants": ["n", "s", "m", "l", "x"],
      "isStandard": true
    }
  ],
  
  "python": {
    "minVersion": "3.8",
    "requirements": [
      "ultralytics>=8.0.0",
      "numpy>=1.20.0,<2",
      "opencv-python>=4.6.0",
      "pillow>=9.0.0",
      "pyyaml>=6.0",
      "tqdm>=4.60.0",
      "typing_extensions>=4.5.0"
    ],
    "pytorch": {
      "packages": ["torch>=2.0.0", "torchvision>=0.15.0"],
      "gpu": {
        "minCuda": "11.8",
        "indexUrl": "https://download.pytorch.org/whl/cu118"
      },
      "cpu": {
        "indexUrl": "https://download.pytorch.org/whl/cpu"
      }
    }
  },
  
  "paramsSchema": {
    "type": "object",
    "properties": {
      "device": {
        "type": "string",
        "title": "训练设备",
        "default": "0",
        "description": "CUDA 设备编号，如 0 或 0,1,2,3 或 cpu"
      },
      "lr0": {
        "type": "number",
        "title": "初始学习率",
        "default": 0.01,
        "minimum": 0.0001,
        "maximum": 1.0
      },
      "optimizer": {
        "type": "string",
        "title": "优化器",
        "default": "auto",
        "enum": ["auto", "SGD", "Adam", "AdamW"]
      },
      "augment": {
        "type": "boolean",
        "title": "数据增强",
        "default": true
      },
      "patience": {
        "type": "integer",
        "title": "早停耐心值",
        "default": 50,
        "description": "验证集无提升时等待的 epoch 数"
      }
    }
  }
}
